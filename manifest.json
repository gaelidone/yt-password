{
  "manifest_version": 3,
  "name": "YouTube Study Modal",
  "version": "1.1",
  "description": "Displays a motivational modal when a YouTube video is opened.",
  "permissions": ["scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
